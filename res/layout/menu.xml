<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/fondo">
	
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"		
		android:layout_gravity="center">
		
		<ImageView android:id="@+id/logodndzgz"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/logodndzgz"
			android:layout_gravity="center">
		</ImageView>
		
		<ImageView android:id="@+id/autobuses"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/autobuses"
			android:layout_gravity="center">
		</ImageView>
		
		<ImageView android:id="@+id/bizi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/bizi"
			android:layout_gravity="center">
		</ImageView>
		
		<ImageView android:id="@+id/wifi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/wifi"
			android:layout_gravity="center">
		</ImageView>
		
		
	</LinearLayout>
</LinearLayout>