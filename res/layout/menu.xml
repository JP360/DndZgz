<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/contenedor"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center"
	android:layout_gravity="center|center_vertical" android:background="@drawable/fondo">
	<com.markupartist.android.widget.ActionBar
    android:id="@+id/actionbar"   
    style="@style/ActionBar"
    />
	<LinearLayout android:id="@+id/poste" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" android:gravity="center"
		android:layout_marginTop="20px">

		<TextView android:id="@+id/textView1" android:text="@string/id_poste"
			android:layout_gravity="center" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:gravity="right"
			android:textSize="30px" android:layout_weight="5" android:layout_marginRight="10px"/>
			
		<EditText android:layout_height="wrap_content" android:id="@+id/txtParada"
			android:layout_width="wrap_content" android:numeric="integer"
			android:maxLength="4" android:layout_weight="2" />
			
		<ImageView android:id="@+id/search" android:src="@drawable/search"
			android:layout_width="wrap_content" android:layout_gravity="left"
			android:layout_height="fill_parent" android:layout_weight="2" />
			
	</LinearLayout>
	
	<TableLayout android:id="@+id/TableLayout01"
		android:layout_width="wrap_content" android:layout_gravity="center|bottom"
		android:layout_height="wrap_content" android:gravity="center"
		android:layout_weight="1">

		<TableRow android:id="@+id/TableRow01" android:gravity="center">
			<ImageView android:id="@+id/bus" android:layout_height="wrap_content"
				android:src="@drawable/bus" android:layout_gravity="bottom"
				android:layout_width="wrap_content">
			</ImageView>
			<ImageView android:src="@drawable/bizi" android:id="@+id/bizi"
				android:layout_gravity="bottom" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			</ImageView>
			<ImageView android:id="@+id/tranvia" android:src="@drawable/tranvia"
				android:layout_gravity="bottom" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			</ImageView>
		</TableRow>

		<TableRow android:id="@+id/TableRow02" android:gravity="center">
			<ImageView android:id="@+id/recarga" android:layout_height="wrap_content"
				android:src="@drawable/recarga" android:layout_gravity="bottom"
				android:layout_width="fill_parent">
			</ImageView>

			<ImageView android:src="@drawable/farmacia" android:id="@+id/farmacia"
				android:layout_gravity="bottom" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
			</ImageView>

			<ImageView android:id="@+id/gas" android:src="@drawable/gas"
				android:layout_gravity="bottom" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
			</ImageView>
		</TableRow>

		<TableRow android:id="@+id/TableRow03" android:gravity="center">
			<ImageView android:id="@+id/taxi" android:layout_height="wrap_content"
				android:src="@drawable/taxi" android:layout_gravity="bottom"
				android:layout_width="fill_parent">
			</ImageView>

			<ImageView android:src="@drawable/parking" android:id="@+id/parking"
				android:layout_gravity="bottom" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
			</ImageView>

			<ImageView android:id="@+id/wifi" android:src="@drawable/wifi"
				android:layout_gravity="bottom" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
			</ImageView>
		</TableRow>
		<TableRow android:id="@+id/TableRow03" android:gravity="center">
			<ImageView android:id="@+id/fav" android:layout_height="wrap_content"
				android:src="@drawable/fav" android:layout_gravity="bottom"
				android:layout_width="fill_parent">
			</ImageView>
		</TableRow>
	</TableLayout>
</LinearLayout>