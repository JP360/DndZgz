<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/contenedor"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<com.markupartist.android.widget.ActionBar
		android:id="@+id/actionbar" style="@style/ActionBar" />
	<LinearLayout android:id="@+id/poste" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" android:gravity="left"
		android:layout_marginBottom="20px">

		<TextView android:id="@+id/textView1" android:text="@string/buscar"
			android:layout_gravity="center" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:gravity="left"
			android:textSize="25px" android:layout_marginRight="10px"/>

		<EditText android:layout_height="wrap_content" android:id="@+id/txtParada"
			android:layout_width="fill_parent" />

	</LinearLayout>
	<ListView android:id="@+id/ListAutobuses"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>